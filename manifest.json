{
    "manifest_version": 2,
    "name": "Stats for PiHole",
    "version": "1.0",
    "description": "Fetches data from an API and displays it in a popup",
    "homepage_url": "https://github.com/jlavery34/pistats",
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "<all_urls>"
      ],  
      "background": {
        "scripts": ["src/background.js"]
      },    
    "browser_action": {
      "default_popup": "src/popup.html",
      "default_icon": {
        "48": "icons/pihole48.png"
      }
    },
    "icons": {
      "48": "icons/pihole48.png"
    },
    "web_accessible_resources": [
        "src/popup.html",
        "src/setup.html"
      ],
      "options_ui": {
        "page": "src/setup.html",
        "open_in_tab": true
      }
      
  }
  